<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
</head>
<body>
 
<h2>Editar Registro</h2>
  <% data.forEach((details) => { %>
    <form action="/edit/<%= details._id %>" method="POST">
      <input type="text" placeholder="Nome" value="<%= details.name %>" name="name">
      <input type="text" placeholder="Sobrenome" value="<%= details.surname %>" name="surname">
      <br />
      <button onclick="window.location='/show';">Todos</button>
      <button type="submit">Editar</button>
    </form>
  <% }) %>
 
</body>
</html>