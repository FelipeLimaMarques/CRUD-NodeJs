<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>A2 CRUD em NodeJs</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
 
<h2>Editar Registro</h2>
  <% data.forEach((details) => { %>
    <form action="/edit/<%= details._id %>" method="POST">
      <div class="form-group form-row">
        <div class="col-4">
          <label for="name">Nome: </label>
          <input type="text" class="form-control" placeholder="Nome" value="<%= details.name %>" name="name">
        </div>
        <div class="col-4">
          <label for="surname">Sobrenome: </label>
          <input type="text" class="form-control" placeholder="Sobrenome" value="<%= details.surname %>" name="surname">
        </div>
      </div>
      <div class="form-group form-row">
        <div class="col-2">
          <label for="sex">Sexo: </label>
          <select id="sex" name="sex" class="form-control" value="<%= details.sex %>">
            <option value="Masculino">Masculino</option>
            <option value="Feminino">Feminino</option>
            <option value="Outro">Outro</option>
          </select>
        </div>
        <div class="col-2">
          <label for="birth">Nascimento: </label>
          <input type="date"  class="form-control" value="<%= details.birth %>" id="birth" name="birth">
        </div>
      </div>
      <div class="form-group form-row">
        <div class="col-4">
          <label for="email">Email: </label>
          <input type="text" class="form-control" value="<%= details.email %>" placeholder="E-mail" name="email">
        </div>
        <div class="col-4">
          <label for="phone">Telefone: </label>
          <input type="text" class="form-control" value="<%= details.phone %>" placeholder="Telefone" name="phone">
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-5">
            <label for="address">Endereço: </label>
            <input type="text" class="form-control" value="<%= details.address %>" placeholder="Endereço" name="address">
          </div>
          <div class="col-3">
            <label for="complement">Complemento: </label>
            <input type="text" class="form-control" value="<%= details.complement %>" placeholder="Complemento" name="complement">
          </div>
        </div>
        <div class="form-row">
          <div class="col-2">
            <label for="cep">CEP: </label>
            <input type="text" class="form-control" value="<%= details.cep %>" placeholder="CEP" name="cep">
          </div>
          <div class="col-1">
            <label for="number">Nº: </label>
            <input type="text" class="form-control" value="<%= details.number %>" placeholder="Número" name="number">
          </div>
        </div>
      </div>
      <button class="btn btn-primary" onclick="window.location='/show';">Todos</button>
      <button type="submit" class="btn btn-primary">Editar</button>
    </form>
  <% }) %>
 
</body>
</html>